@using AniversarioApplication.Entidade
@model Amigo

<form method="post" asp-controller="Home" asp-action="SaveEdit" asp-route-amigoId="@Model.Id" >
    <div class="form-group">
        <label for="exampleInputEmail1">Nome</label>
        <input value="@Model.Nome" type="text" class="form-control" asp-for="Nome">
        <span asp-validation-for="Nome"></span>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Sobrenome</label>
        <input value="@Model.Sobrenome" type="text" class="form-control" asp-for="Sobrenome">
        <span asp-validation-for="Sobrenome"></span>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Data de Aniversério</label>
        <input value="@Model.Aniversario" type="text" class="form-control" asp-for="Aniversario">
        <span asp-validation-for="Aniversario"></span>
    </div>


    <button type="submit" class="btn btn-primary" >Salvar edição Amigo</button>
    <a asp-area="" asp-controller="Home" asp-action="Index">Voltar</a>
</form>